# bring in rules for testing
import testing ;
import path ;

path-constant TEST_DIR : $(BOOST_ROOT)/bin.v2/libs/dll/test ;
local RDYNAMIC = <target-os>linux:<linkflags>"-rdynamic" <target-os>darwin:<linkflags>"-rdynamic" <target-os>iphone:<linkflags>"-rdynamic" ;


# Static library that is not linked with any of the boost libs
lib static_plugin : ../example/tutorial4/static_plugin.cpp : <link>static : : $(RDYNAMIC) ;
lib static_refcounting_plugin : ../example/tutorial8/refcounting_plugin.cpp : <link>static : : <variant>release $(RDYNAMIC) ;

project
   : source-location .
   : requirements

   # linux
      <target-os>linux:<linkflags>"-ldl" <target-os>linux:<cxxflags>"-fvisibility=hidden"
      <toolset>gcc:<cxxflags>"-Wall -Wextra -pedantic -Wno-long-long"

   # others
      <library>/boost/filesystem//boost_filesystem
      <library>/boost/system//boost_system
      <threading>multi
    ;
{

    # our test lib for shared library tests
    lib test_library : test_library.cpp : <link>shared ;
    lib getting_started_library : ../example/getting_started_library.cpp : <link>shared ;
    lib my_plugin_sum : ../example/tutorial1/my_plugin_sum.cpp : <link>shared ;
    lib my_plugin_aggregator : ../example/tutorial2/my_plugin_aggregator.cpp : <link>shared ;
    lib on_unload_lib : ../example/tutorial6/on_unload_lib.cpp : <link>shared ;
    lib library1 : ../example/tutorial7/library1.cpp : <link>shared ;
    lib library2 : ../example/tutorial7/library2.cpp : <link>shared ;
    lib refcounting_plugin : ../example/tutorial8/refcounting_plugin.cpp : <link>shared <define>BOOST_DLL_FORCE_ALIAS_INSTANTIATION ;
    install install-bin
        : test_library my_plugin_sum my_plugin_aggregator
            on_unload_lib getting_started_library library1 library2 refcounting_plugin
        : <location>$(TEST_DIR)
    ;
  
    test-suite boostdll
        :
        [ run shared_library_load_test.cpp : $(TEST_DIR) : : <dependency>install-bin ]
        [ run shared_library_search_symbol_test.cpp : $(TEST_DIR) : : $(RDYNAMIC) <dependency>install-bin ]
        [ run shared_library_get_symbol_test.cpp : $(TEST_DIR) : : $(RDYNAMIC) <dependency>install-bin ]
        [ run shared_library_get_symbol_test.cpp
                : $(TEST_DIR)
                :
                : $(RDYNAMIC) <target-os>windows:<define>TEST_FORCE_USE_OF_WINDOWS_H <dependency>install-bin
                : get_symbol_windows_h_forced
        ]
        [ run symbol_runtime_info_test.cpp : $(TEST_DIR) : : $(RDYNAMIC) <dependency>install-bin ]
        [ run shared_library_errors.cpp : $(TEST_DIR) : : <test-info>always_show_run_output <dependency>install-bin ]
        [ run structures_tests.cpp ]
        [ run library_info_test.cpp : $(TEST_DIR) : : <library>static_plugin <test-info>always_show_run_output <dependency>install-bin ]
        [ run ../example/getting_started.cpp : $(TEST_DIR) : : <dependency>install-bin ]
        [ run ../example/tutorial1/tutorial1.cpp : $(TEST_DIR) : : <dependency>install-bin ]
        [ run ../example/tutorial2/tutorial2.cpp : $(TEST_DIR) : : <dependency>install-bin ]
        [ run ../example/tutorial3/tutorial3.cpp : $(TEST_DIR) : : <dependency>install-bin ]
        [ run ../example/tutorial4/load_self.cpp 
                : : : <variant>release <library>static_plugin $(RDYNAMIC)
        ]
        [ run ../example/tutorial5/load_all.cpp
                : $(TEST_DIR) : : <library>static_plugin $(RDYNAMIC) <dependency>install-bin
        ]
        [ run ../example/tutorial6/tutorial6.cpp : $(TEST_DIR) : : <dependency>install-bin ]
        [ run ../example/tutorial7/tutorial7.cpp : $(TEST_DIR) : : <dependency>install-bin ]
        [ run ../example/tutorial8/tutorial8.cpp : $(TEST_DIR) : : <dependency>install-bin ]
        [ run ../example/tutorial8/tutorial8_static.cpp
                : $(TEST_DIR)
                :
                : <link>static <variant>release <library>static_refcounting_plugin $(RDYNAMIC) <test-info>always_show_run_output
        ]
        [ run ../example/tutorial9/tutorial9.cpp : : : <dependency>install-bin ]
        [ compile-fail section_name_too_big.cpp ]
    ;
}
